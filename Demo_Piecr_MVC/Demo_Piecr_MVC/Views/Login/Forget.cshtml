
@{
    Layout = null;
}

<!DOCTYPE html>

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.4.1.js"></script>
<style>
    #demo {
        text-align: center;
        background: url('../Img/QQ图片20201210182131.png') no-repeat;
        background-size: 100% 100%;
    }



    #demo_1_1 {
        margin-top: 240px;
        height: 100px;
        width: 120px;
        border: solid 1px;
        margin-left: 1520px;
        background-image: url('../Img/1111.jpg');
        background-size: 100% 100%;
        align-content: center;
        border-color: black;
    }
</style>
<html>
<head>
    <meta name="viewport" content="width=device-width" />


</head>
<body>
    <div>
        <div id="demo" style=" width:1900px;height:965px;border:solid 1px ">
            <div id="demo_1_1"> </div>
            <div id="demo_1" style="color:green; margin:0 auto;width:500px;height:55px; font-size:30px;text-align:center;margin-left:1320px" readonly="readonly"> </div>
            <br />

            <input type="text" id="Account" placeholder="请输入账号" style="width:250px;height:40px;margin-left:1325px" />
            <br />
            <br />
            <input type="password" id="Pwd" placeholder="请输入修改后的密码" style="color:red; width:250px;height:40px;margin-left:1325px;display:inline-block" />
            <br />
            <br />

            <input type="button" value="保存" onclick="btnDL()" class="btn btn-primary" style="margin-left:1220px;width:110px;height:38px;margin-top:30px" />
            <input type="button" value="重置" onclick="btnCZ()" class="btn btn-danger" style="margin-left:1220px;width:110px;height:38px;margin-top:10px" />


        </div>
    </div>
</body>
</html>


<script>

    //登录按钮点击
    function btnDL() {
        var s = $("#Account").val();
        if (s == "") {
            alert("用户名不能为空");
            return;
        }
        var a = $("#Pwd").val();
        if (a == "") {
            alert("密码不能为空");
            return;
        }



        $.ajax({
            url: 'http://localhost:50100/api/Login/UptLogin',
            type: "post",
            data: { LName: s, LPwd: a },
            dataType: "json",
            success: function (d) {
                if (d > 0) {

                    alert("修改成功");
                    location.href = "/Login/Login";
                }
                else {
                    alert("用户名不存在");
                }
            }
        });
    }
    function btnCZ() {
        location.href = "/Login/Forget";
    }
</script>